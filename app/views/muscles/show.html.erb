<div class="container">
  <div class="row">
    <div>
      <%= link_to :back do %>
        <i class="fas fa-backward">戻る</i>
      <% end %>
    </div>
    <div class="text-center">
      <div class="heading-title">
        <h1 class="heading-style"><%= @muscle.name %></h1>
      </div>
      <% @muscle.muscle_images.each.with_index do |image,index| %>
        <div class="muscle-aciton-card">
          <h4><%= muscle_action_label(index) %></h4>
          <%= attachment_image_tag image, :image, :fill, 250, 400 %>
        </div>
      <% end %>
    </div>
    <div class="col-xs-offset-1 col-xs-10">
      <table class="table muscle-show-table">
        <tr>
          <th>起始</th>
          <td><%= @muscle.origin %></td>
        </tr>
        <tr>
          <th>停止</th>
          <td><%= @muscle.insertion %></td>
        </tr>
        <tr>
          <th>支配神経</th>
          <td><%= @muscle.innervation %></td>
        </tr>
        <tr>
          <th>作用</th>
          <td><%= @muscle.action %></td>
        </tr>
        <tr>
          <th>部位</th>
          <td><%= @muscle.genre.name %></td>
        </tr>
        <tr>
          <th>追加情報</th>
          <td><%= @muscle.information %></td>
        </tr>
      </table>
      <div class="heading-title text-center">
        <h2 class="heading-style">ノートを書く</h2>
        <h3>Writing Note</h3>
      </div>
      <%= render partial: 'notes/note_new', locals: {note: @note} %>
    </div>
  </div>
</div>
